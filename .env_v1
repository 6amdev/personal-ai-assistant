# LLM Configuration
LLM_MODEL=llama3.1:8b
LLM_TEMPERATURE=0.7

# Available Models (comma-separated, no spaces)
# Make sure these models are pulled in Ollama: ollama pull <model-name>
AVAILABLE_MODELS=llama3.2:3b,llama3.1:8b,llama3:8b,mistral:7b,gemma2:9b,phi3:14b

# Embeddings - เลือกที่ใช้
EMBEDDING_PROVIDER=sentence-transformers
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cuda

# สำหรับทดสอบ OpenAI ทีหลัง (ไม่ต้องใส่ตอนนี้)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Database
CHROMA_DB_DIR=./data/chroma_db
COLLECTION_NAME=personal_assistant

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# API Security
# เปลี่ยน API_KEY เป็นค่าที่ปลอดภัยของคุณเอง!
API_KEY=your-super-secret-api-key-change-this-please
ENABLE_AUTH=true